import turtle
import time
import datetime
tur = turtle.Turtle()
tur.speed(100)
turtle.setup(850,850)
tur.speed(10)


tur.pencolor(0,0,0)
tur.pensize(3)
tur.penup()
tur.goto(0,-50)
tur.pendown()
tur.circle(220)
tur.penup()
tur.goto(0,170)
tur.pendown()
tur.write("o")
update = True



def writeNumber(num):
    tur.penup()
    tur.forward(200)
    tur.write(num)
    tur.back(200)
    tur.pendown()
    tur.right(6)
def writeDg(zh):
    tur.pencolor(0,0,0)
    tur.pensize(40)
    tur.penup()
    tur.forward(200)
    tur.write(".")
    tur.back(200)
    tur.pendown()
    tur.right(6)
    
tur.seth(90)

writeNumber(12)
