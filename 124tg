tur.right(90)
tur.pencolor(1,0,0)
tur.pensize(3)
tur.penup()
tur.goto(0,-50)
tur.pendown()
tur.circle(220)
tur.penup()
tur.pencolor(1,1,0)
tur.penup()
tur.goto(0,-50)
tur.pendown()
tur.circle(220)
tur.penup()
tur.pencolor(1,1,1)
tur.pensize(3)
tur.penup()
tur.goto(0,-50)
tur.pendown()
tur.circle(220)
tur.penup()
tur.pencolor(0,1,0)
tur.pensize(3)
tur.penup()
tur.goto(0,-50)
tur.pendown()
tur.circle(220)
tur.penup()
tur.pencolor(0,1,1)
tur.pensize(3)
tur.penup()
tur.goto(0,-50)
tur.pendown()
tur.circle(220)
tur.penup()
tur.pencolor(0,0,1)
tur.pensize(3)
tur.penup()
tur.goto(0,-50)
tur.pendown()
tur.circle(220)
tur.penup()
tur.pencolor(1,0,1)
tur.pensize(3)
tur.penup()
tur.goto(0,-50)
tur.pendown()
tur.circle(220)
tur.penup()
tur.goto(0,170)

update = True
updateSecond = True

while True:
    now = datetime.datetime.now()
    h = now.hour % 12
    m = now.minute
    s = now.second
tur.goto (0,170)
        
    if update:
        minute = turtle.Turtle()
        minute.seth(90)
        minute.right(m * 6)
        minute.forward(150)
       
        hour = turtle.Turtle()
        hour.seth(90)
        hour.right(h * 30+m/60 * 30)
        hour.forward(100)
        update = False
        
    if updateSecond:
        second = turtle.Turtle()
        second.seth(90)
        second.right(s * 6)
        second.forward(200)
        updateSecond = False
    time.sleep(1)
    now = datetime.datetime.now()
    mNew = now.minute
    sNew = now.hour
    
    if mNew != m:
        update = True
            
        hour.clear()
        hour.reset()
            
        minute.clear()
        minute.reset()
        
    if mNew != s:
        updateSecond = True

        second.clear()
        second.reset()
        
turtle.done()
turtle.exitonclick()